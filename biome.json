{
    "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
    "files": {
        "includes": ["**/*.{tsx,ts,json,css,cjs}", "!**/node_modules/*", "!**/dist/*", "!**/build/*", "!**/public/*"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "nursery": {
                "useSortedClasses": {
                    "level": "info",
                    "options": {
                        "attributes": ["classList"],
                        "functions": ["cn", "cva", "tw", "tw.*"]
                    }
                }
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    },
    "formatter": {
        "lineWidth": 130,
        "indentWidth": 4,
        "indentStyle": "space"
    }
}
